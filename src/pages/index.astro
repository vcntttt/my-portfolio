---
import Layout from '../layouts/Layout.astro'
import GithubIcon from '../components/icons/Github.astro'
import LikedinIcon from '../components/icons/Linkedin.astro'
import SocialCard from '../components/SocialCard.astro'
import Experience from '../components/Experience/Experience.astro'
import Section from '../components/Section.astro'
import BriefcaseIcon from '../components/icons/Briefcase.astro'
import CodeIcon from '../components/icons/Code.astro'
import Projects from '../components/Projects/Projects.astro'
import Footer from '../components/Footer.astro'
---

<Layout 
	title='Portfolio de Vicente Rivera - Desarrollador y Programador Web'
	description = 'paypal.me/vcntttt'
>
	<main>
		<!-- TODO: mejorar texto -->
		<Section class="pt-64 pb-40">
			<h1 class='text-5xl font-bold flex gap-x-4 pb-4'>
				Hey, soy Vicente Rivera.
			</h1>
			<h2 class='text-xl text-wrap opacity-80'>
				<span class='text-yellow-300'>Desarrollador Web.</span>
				Actualmente estudiante de Ing. Informatica en la <span class='text-blue-500/80'>UCT<span/>.
			</h2>
			<Section class='flex gap-x-8 p-4 w-1/6'>
				<SocialCard href='https://github.com/vcntttt'>
					<GithubIcon class='size-12'/>
				</SocialCard>
				<SocialCard href='https://github.com/vcntttt'>
					<LikedinIcon class='size-12'/>
				</SocialCard>
			</Section>
		</Section>
		<Section id="experience" >
			<h2 class='flex items-center gap-x-2 text-4xl font-semibold pb-2'><BriefcaseIcon class="size-8"/> Experiencia Laboral</h2>
			<Experience/>
		</Section>
		<Section id="proyects">
			<h2 class='flex items-center gap-x-2 text-4xl font-semibold pb-2'><CodeIcon class="size-8"/> Proyectos</h2>
			<Projects/>
		</Section>
	</main>
	<Footer/>
</Layout>